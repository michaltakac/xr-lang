; Simple 3D scene with a single animated cube

(defbehavior pulse
  (state (t 0.0))
  (update (dt)
    (set! t (+ t dt))
    (let ((scale-factor (+ 1.0 (* 0.3 (sin t)))))
      (set-scale scale-factor scale-factor scale-factor))))

(defscene3d simple
  (object my-cube cube
    (position 0 0 0)
    (behavior pulse)))