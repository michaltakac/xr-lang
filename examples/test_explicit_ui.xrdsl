; Test scene with explicitly defined UI elements

(defscene3d ui-scene
  (camera
    (position 5 3 5)
    (target 0 0 0)
    (fov 60.0))
    
  (lighting
    (ambient 0.3 0.3 0.3)
    (directional
      (direction 1 1 1)
      (color 1.0 1.0 1.0)
      (intensity 1.0)))
  
  ; A cube
  (object test-cube cube
    (position 0 0 0)
    (scale 1 1 1)
    (material mesh-basic
      (color "#00FF00")
      (opacity 1.0)
      (side front)))
  
  ; Explicitly defined UI panel
  (ui-element info-panel panel
    (position 5 0 -2)
    (size 3 2)
    (text "This is an explicit UI panel")
    (color rgba 200 200 200 0.8))
  
  ; Some UI text
  (ui-element label text
    (position 0 3 0)
    (size 2 0.5)
    (text "UI Demo")
    (color "#FFFFFF")))