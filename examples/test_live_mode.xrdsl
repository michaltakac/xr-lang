(defscene3d live-mode-test
  (camera
    (position 0 5 15)
    (target 0 0 0)
    (fov 45))
    
  (object test-cube cube
    (position 0 1 0)
    (scale 1.0 1.0 1.0)
    (behavior spin))
    
  (object ground plane
    (position 0 0 0)
    (scale 10.0 1.0 10.0)))

(defbehavior spin
  (state (speed 2.0))
  (update (dt)
    (set! rotation.y (+ rotation.y (* speed dt)))))