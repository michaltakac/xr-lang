; Text rendering test scene for SDF improvements
; This tests the improved Hack font rendering with better SDF quality

(defscene3d text-test-scene
  (camera
    (position 0 0 10)
    (target 0 0 0)
    (fov 60))
    
  (lighting
    (ambient 0.3 0.3 0.3)
    (directional
      (direction 1 1 1)
      (color 1.0 1.0 1.0)
      (intensity 1.0)))
  
  ; Test different text sizes and distances
  (ui-element large-text panel
    (position 0 2 0)
    (size 40 10)
    (text "HACK FONT TEST\nABCDEFGHIJKLMNOPQRSTUVWXYZ\nabcdefghijklmnopqrstuvwxyz\n0123456789!@#$%^&*()")
    (color 1.0 1.0 1.0 0.95))
    
  (ui-element medium-text panel
    (position 0 0 -2)
    (size 30 8)
    (text "Medium Size Text\nImproved SDF Rendering\nSharper Edges")
    (color 0.8 0.9 1.0 0.9))
    
  (ui-element small-text panel
    (position 0 -2 -4)
    (size 20 6)
    (text "Small text test\nAnti-aliasing quality\nReadability check")
    (color 1.0 0.9 0.8 0.85))
    
  (ui-element info-text text
    (position -3 3 0)
    (size 15 2)
    (text "SDF Parameters:\n• Padding: 8px\n• Font Size: 96px\n• Adaptive Width")
    (color 0.7 1.0 0.7 1.0)))