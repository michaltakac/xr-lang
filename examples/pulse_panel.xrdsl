; Pulsing panel example - demonstrates state management and math functions

(defbehavior pulse
  (state (t 0.0) (speed 2.0))
  (update (dt)
    (set! t (+ t (* speed dt)))
    (let ((red (+ 0.5 (* 0.5 (sin t))))
          (blue (+ 0.5 (* 0.5 (sin (* t 1.3))))))
      (gpu.panel.color red 0.8 blue 1.0))))