; Test for various color formats in materials

(defscene3d color-formats-test
  (camera
    (position 10 5 10)
    (target 0 0 0)
    (fov 70.0))
    
  (lighting
    (ambient "#404040")  ; Hex color for ambient
    (directional
      (direction 1 1 1)
      (color hsl 60 100 80)  ; Yellow in HSL
      (intensity 1.2)))
  
  ; Cube with HEX color (red)
  (object hex-cube cube
    (position -6 0 0)
    (scale 1 1 1)
    (material mesh-basic
      (color "#FF0000")
      (opacity 1.0)
      (side front)))
  
  ; Cube with short HEX (green)
  (object hex-short-cube cube
    (position -4 0 0)
    (scale 1 1 1)
    (material mesh-basic
      (color "#0F0")
      (opacity 1.0)
      (side front)))
  
  ; Cube with RGBA HEX (blue with alpha)
  (object hex-alpha-cube cube
    (position -2 0 0)
    (scale 1 1 1)
    (material mesh-basic
      (color "#0000FFCC")
      (opacity 1.0)
      (transparent true)
      (side front)))
  
  ; Sphere with HSL color (purple)
  (object hsl-sphere sphere
    (position 0 0 0)
    (scale 1 1 1)
    (material mesh-basic
      (color hsl 270 100 50)
      (opacity 1.0)
      (side front)))
  
  ; Sphere with HSLA color (orange with transparency)
  (object hsla-sphere sphere
    (position 2 0 0)
    (scale 1 1 1)
    (material mesh-basic
      (color hsla 30 100 50 0.7)
      (transparent true)
      (side front)))
  
  ; Cube with RGBA color (cyan)
  (object rgba-cube cube
    (position 4 0 0)
    (scale 1 1 1)
    (material mesh-basic
      (color rgba 0 255 255 1.0)
      (opacity 1.0)
      (side front)))
  
  ; Cube with traditional RGB (magenta)
  (object rgb-cube cube
    (position 6 0 0)
    (scale 1 1 1)
    (material mesh-basic
      (color 1.0 0.0 1.0)
      (opacity 1.0)
      (side front)))
  
  ; Ground plane with HSL color
  (object ground plane
    (position 0 -2 0)
    (scale 15 1 15)
    (material mesh-basic
      (color hsl 120 50 30)  ; Dark green
      (opacity 1.0)
      (side double)))
  
  ; UI elements with various color formats
  (ui-element hex-label text
    (position -6 2 0)
    (size 2 0.5)
    (text "HEX #FF0000")
    (color "#FFFFFF"))
  
  (ui-element hsl-label text
    (position 0 2 0)
    (size 2 0.5)
    (text "HSL 270 100 50")
    (color hsl 0 0 100))  ; White in HSL
  
  (ui-element rgba-label text
    (position 4 2 0)
    (size 2 0.5)
    (text "RGBA 0 255 255")
    (color rgba 255 255 255 0.9)))