; Test behavior hot-swapping with dotted notation
; Try changing the speed value or the rotation axis and save

(defbehavior test-spin
  (state (speed 2.0))
  (update (dt)
    ; Currently spins around Y axis at speed 2.0
    ; Try changing to rotation.x or rotation.z 
    ; Try changing speed to 10.0
    (set! rotation.y (+ rotation.y (* speed dt)))))

(defscene3d hotswap-test
  (camera
    (position 0 5 10)
    (target 0 0 0)
    (fov 45))
    
  (object test-cube cube
    (position 0 0 0)
    (scale 2 2 2)
    (color 1.0 0.3 0.3)
    (behavior test-spin))
)