; Debug test for behavior hot-swapping
; Start with speed 1.0, then change to 10.0 and save

(defbehavior spin
  (state (speed 5.0))  ; <- Change this value and save
  (update (dt)
    (set! rotation.y (+ rotation.y (* speed dt)))))

(defscene3d debug-scene
  (camera
    (position 0 5 10)
    (target 0 0 0)
    (fov 65))
    
  (object test-cube cube
    (position 0 0 0)
    (scale 2 2 2)
    (color 1.0 0.2 0.2)
    (behavior spin))
)